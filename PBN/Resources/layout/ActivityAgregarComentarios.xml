<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="15.0dp"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:text="@string/txt12"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="85.5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
	<SearchView
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/searchView1" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="300.5dp"
        android:id="@+id/lvoaradaCom" />
	<TextView
		android:layout_width="match_parent"
		android:textAlignment="center"
		android:layout_height="wrap_content"
		android:text="@string/txt5"
		android:textStyle="bold"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/textView2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="73.5dp"
        android:id="@+id/editComentario" />
    <Button
        android:layout_gravity="center"
        android:layout_width="212.5dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/btn4"
        android:id="@+id/button1" />
</LinearLayout>
