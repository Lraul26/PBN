<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="15.0dp"
    android:layout_height="match_parent">

     <TextView
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/txt5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <ImageView
        android:src="@drawable/logopbm"
        android:layout_width="match_parent"
        android:layout_height="300.0dp"
        android:contentDescription=""
        android:id="@+id/imageView1" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout1">
            <TextView
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/txt1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView2" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow1">
                <EditText
                    android:textColor="@android:color/white"
                    android:layout_width="580.0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/editText1" />
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView4" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/txt6"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView3" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow2">
                <EditText
                    android:textColor="@android:color/white"
                    android:layout_width="580.0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/editText2" />
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView5" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/txt7"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView6" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tableRow3">
                <EditText
                    android:textColor="@android:color/white"
                    android:layout_width="580.0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/editText3" />
            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView7" />
            <Button
                android:background="@color/background1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/btn2"
                android:id="@+id/button1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/textView8" />
            <Button
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:background="@color/background"
                android:text="@string/btn3"
                android:id="@+id/btnsesion" />
        </TableLayout>
    </ScrollView>
</LinearLayout>
