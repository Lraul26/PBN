<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="15.0dp"
    android:layout_height="match_parent">
    
    
   <ScrollView
    
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scr">

        <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="15.0dp"
    android:layout_height="match_parent">
 
        <TextView
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="Agregar Parada"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="78.5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txtTitulo" />
    <TextView
        android:textColor="@android:color/white"
        android:text="Parada"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8" />
    <EditText
        android:textColorHint="@color/blanco"
        android:hint="Ingrese una descipciÃ³n de la parada"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etDescrip" />
    <TextView
        android:textColor="@android:color/holo_red_light"
        android:text="(*)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10" />
    <TextView
         android:textColor="@android:color/white"
        android:text="Alias"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9" />


    <EditText
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAlias" />
     <TextView
        android:text="(Opcional)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11" />
  
        <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4" >
        <TextView
            android:textColor="@android:color/white"
            android:text="Latitud"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="183.5dp"
            android:layout_height="match_parent"
            android:id="@+id/textView12" />
        <TextView
            android:textColor="@android:color/white"
            android:text="Longitud"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView13" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <EditText
            android:gravity="center"
            android:textColor="@android:color/white"
            android:inputType="textMultiLine"
            android:layout_width="183.5dp"
            android:layout_height="match_parent"
            android:id="@+id/etlatitud" />
       
        <EditText
            android:gravity="center"
            android:textColor="@android:color/white"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/etlongitud" />
       
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <TextView
            android:text="(Opcional)"
            android:layout_width="183.5dp"
            android:layout_height="match_parent"
            android:id="@+id/textView6" />
        <TextView
            android:text="(Opcional)"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView7" />
               
    </LinearLayout>
     <CheckBox
            android:text="Estado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/chkEstado" />
      
    <TextView
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3" />

    <ImageView
        android:src="@drawable/paradapordefecto"
        android:layout_width="match_parent"
        android:layout_height="206.5dp"
        android:id="@+id/ivParada" />
       
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
       
            <Button
            android:gravity="center"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:background="@color/background1"
            android:text="Agregar Foto"
            android:layout_width="119.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnAgregarfoto" />
        <Button
            android:gravity="center"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:background="@color/background1"
            android:text="Abrir Camara"
            android:layout_width="114.5dp"
            android:layout_height="match_parent"
            android:id="@+id/btnCamara" />

        <Button
            android:gravity="center"
            android:layout_margin="5dp"
            android:paddingBottom="5dp"
            android:background="@color/background1"
            android:text="Aceptar"
            android:layout_width="94.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnAceptar" />
    </LinearLayout>
   
</LinearLayout>

    </ScrollView>

    </LinearLayout> 

